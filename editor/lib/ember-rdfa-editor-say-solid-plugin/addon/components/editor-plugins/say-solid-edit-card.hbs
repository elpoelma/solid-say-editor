<div class="modal-dialog__content">
  <p class="u-spacer--tiny">
    {{#if this.auth.webId}}
        {{#if this.isEditMode}}
            <div>
                <form {{on "submit" this.saveUser}}>
                    <label for="name">name</label>
                    <Input id="name" @value={{this.me.name}}/>
                    <br>
                    <label for="formattedName">formattedName</label>
                    <Input id="formattedName" @value={{this.me.formattedName}}/>
                    <br>
                    <label for="organizationName">organizationName</label>
                    <Input id="organizationName" @value={{this.me.organizationName}}/>
                    <br>
                    <label for="inbox">inbox</label>
                    <Input id="inbox" @value={{this.me.inbox}}/>
                    <br>
                    <label for="storage">storage</label>
                    <Input id="storage" @value={{this.me.storage}}/>
                    <br>
                    <label for="account">account</label>
                    <Input id="account" @value={{this.me.account}}/>
                    <br>
                    <label for="privateTypeIndex">privateTypeIndex</label>
                    <Input id="privateTypeIndex" @value={{this.me.privateTypeIndex}}/>
                    <br>
                    <label for="publicTypeIndex">publicTypeIndex</label>
                    <Input id="publicTypeIndex" @value={{this.me.publicTypeIndex}}/>
                    <br>
                    <WuButton @label="Update Profile" @size="small" @isNarrow={{true}} type="submit"/>
                </form>
            </div>

        {{else}}
            <strong>Do you want to edit your profile card?</strong>
        {{/if}}
    {{else}}
    <strong>You are not logged in</strong>
    {{/if}}
  </p>
</div>
<div class="modal-dialog__footer">
 <WuButtonGroup>
    {{#if this.auth.webId}}
    <WuButton @label="Yes" @size="small" @isNarrow={{true}} @commandLocation="below" @onClick={{this.insert}} />
    {{else}}
    <WuButton @label="Login" @size="small" @isNarrow={{true}} @commandLocation="below" @onClick={{this.login}} />
    {{/if}}
  </WuButtonGroup>
</div>
