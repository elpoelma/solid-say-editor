<div class="modal-dialog__content">
    <p class="u-spacer--tiny">
        <ProfileHeader @person={{this.profile.me}}/>
        {{#if this.auth.webId}}
        <strong>Your Solid Files</strong>
        {{else}}
        <strong>You are not logged in</strong>
        {{/if}}
    </p>
    {{#if this.isLoading}}
    <img src="/images/spinner.svg" alt="Loading">
    <p>Loading...</p>
    {{else}}
    <FileList @files={{this.files}} @onSelect={{this.setSelectedFile}} @selectedFile={{this.selectedFile}}/>
    {{/if}}

</div>

<div class="modal-dialog__footer">
    <WuButtonGroup>
        {{#if this.auth.webId}}
        <WuButton @label="Refresh" @size="small" @isNarrow={{true}} @commandLocation="below"
            @onClick={{this.fetchFiles}} />
        <WuButton @label="Insert link" @size="small" @isNarrow={{true}} @commandLocation="below" disabled={{if this.selectedFile false true}} @onClick={{this.insertSelectedFile}}/>
        <WuButton @label="Close" @size="small" @isNarrow={{true}} @commandLocation="below" @onClick={{this.close}} />
        {{else}}
        <WuButton @label="Login" @size="small" @isNarrow={{true}} @commandLocation="below" @onClick={{this.login}} />
        {{/if}}
    </WuButtonGroup>
</div>